<div class="row justify-content-md-center" style="margin-top: 100px">
    <div class="col-md-6">

        <h2>{{title}}</h2>

        {{#if message}}
            <div class="alert alert-danger" role="alert">
                {{message}}
            </div>
        {{/if}}

        <form method="POST" action="/items/borrow/{{id}}">
            <div class="form-group">
                <label for="name">Name <small class="text-danger">required</small></label>
                <input name="name" type="text" class="form-control" id="name" value="{{form.name}}">
            </div>

            <div class="pt-3">
                <button type="submit" class="btn btn-primary">Borrow</button>
                <a href="/items" class="btn btn-link text-dark">Back</a>
            </div>
        </form>
    </div>
</div>